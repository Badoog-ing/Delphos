

<h1>Vista Caja</h1>
<hr />

<div class="row">
    <div class="col-8">

        @using (Html.BeginForm("Index", "Venta", FormMethod.Post))
        {
            <div class="row">
                <div class="col-3">
                    @Html.TextBox("SearchString", "", new { @class = "form-control" })
                </div>
                <div class="col-3">
                    <input class="btn colorBoton" type="submit" value="Buscar por Sku " />
                </div>
                <div class="col-3"></div>
            </div>
        }

    </div>

    <div class="col">
        <button class="btn colorBoton form-control">Agregar Producto</button>
    </div>
</div>

<br />

<div class="row">
    <div class="col" style="text-align:center">
        <p>Nombre del Producto</p>
    </div>
    <div class="col" style="text-align:center">
        <p>SKU</p>
    </div>
    <div class="col" style="text-align:center">
        <p>Precio Unitario</p>
    </div>
    <div class="col" style="text-align:center">
        <p>Cantidad</p>
    </div>
</div>
<div class="row">
    <div class="col">
        <input style="text-align:center" class="form-control" type="text" name="Nombre" id="Nombre" value="@ViewBag.Nombre" disabled />
    </div>
    <div class="col">
        <input style="text-align:center" class="form-control" type="text" name="SKU" id="Sku" value="@ViewBag.Sku" disabled />
    </div>
    <div class="col">
        <input style="text-align:center" class="form-control" type="text" name="Precio" id="" value="@ViewBag.Precio" disabled />
    </div>
    <div class="col">
        <input style="text-align:center" class="form-control" type="text" name="Cantidad" value="" />
    </div>
</div>
<br />
<br />

<div>
    <h4>Con ajax</h4>
    @using (Ajax.BeginForm("Index", "Venta",
        new AjaxOptions()
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "resultado"
        }
        ))
    {
      <span>Buscar</span><input type="text" name="SearchString" />
      <input class="btn btn-primary" type="submit" />
      <div>Resultado : <span id="resultado"></span></div>
    }
</div>
<br /><br />
    <div class="table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Sku</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <th scope="row"></th>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                </tr>

                <tr>
                    <th scope="row"></th>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                    <td><input type="text" name="Nombre" value="" /></td>
                </tr>

            </tbody>
        </table>
    </div>


    <br />
    <div class="row">
        <div class="col">
            <label for="pago">Forma de pago</label>
