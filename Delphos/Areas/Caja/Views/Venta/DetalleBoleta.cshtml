</div>





<div class="row">
    <div class="col">
        <input class="form-control" type="text" name="NumBoleta" value="@Model.NumeroBoleta" disabled />
    </div>
    <div class="col">
        <input class="form-control" type="text" name="FechaBoleta" value="@Model.FechaVenta" disabled />
    </div>
    <div class="col">
        <input class="form-control" type="text" name="MetodoPago" value="" disabled />
    </div>
</div>



<br />

