@model Delphos.Models.Venta


<h1>Detalle Boleta @Model.NumeroBoleta</h1>
<hr />

<div class="row">
    <div class="col" style="text-align:center">
        <p>Numero de Boleta</p>
    </div>
    <div class="col" style="text-align:center">
        <p>Fecha</p>
    </div>
    <div class="col" style="text-align:center">
