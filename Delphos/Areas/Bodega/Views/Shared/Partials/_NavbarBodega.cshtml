@{
    Delphos.Models.Usuario u = (Delphos.Models.Usuario)Session["Usuario"];
}

<nav class="navbar navbar-expand-lg barra">
    <!-- Brand/logo -->
    <a class="navbar-brand">
        <img src="~/Otros/versluys.png" alt="logo" style="width:40px;">
        <label>Bodega</label>
    </a>

    <!-- Links -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Recepcion" ? "active" : "")" style="@(ViewContext.RouteData.Values["Controller"].ToString() == "Recepcion" ? "color:red; background-color: cornsilk; font-weight:bold" : "color:Black")" href="@Url.Action("Index","Recepcion")">Recepcion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Traspaso" ? "active" : "")" style="@(ViewContext.RouteData.Values["Controller"].ToString() == "Traspaso" ? "color:red; background-color: cornsilk; font-weight:bold" : "color:Black")" href="@Url.Action("Index","Traspaso")">Traspasos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "TipoBodega" ? "active" : "")" style="@(ViewContext.RouteData.Values["Controller"].ToString() == "TipoBodega" ? "color:red; background-color: cornsilk; font-weight:bold" : "color:Black")" href="@Url.Action("Index","TipoBodega")">Listar Productos</a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li style="margin-right: 10px; font-style:italic">Bienvenido: @u.Nombre @u.ApellidoP @u.ApellidoM</li>
        <li style="margin-right: 10px">|</li>
        <li class="logoff" style="color:white; font-weight:bold">
            @Html.ActionLink("CerrarSession", "Cerrar", "CerrarSession")
    </ul>
</nav>

