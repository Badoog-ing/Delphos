@model IEnumerable<Delphos.Models.Recepcion>

<h1>Recepción</h1>
<hr />
<div class="caja">
    <div class="row">
        <div class="col-4">
            <input class="form-control" type="search" name="buscar" placeholder="Buscar...">
        </div>
        <div class="col-2">
            <input class="btn colorBoton" type="submit" value="Buscar Orden de Compra">
        </div>
    </div>

    <br />


    <div class="row">
        <div class="col">
            <label for="n1">Orden de compra</label>
            <input class="form-control" type="text" name="n1" value="" placeholder="Orden de compra" disabled />
        </div>
        <div class="col">
            <label for="n2">Nombre proveedor</label>
            <input class="form-control" type="text" name="n2" value="" placeholder="Nombre proveedor" disabled />
        </div>
        <div class="col">
            <label for="n3">N° de Factura</label>
            <input class="form-control" type="text" name="n3" value="" placeholder="000000" />
        </div>
    </div>
    <br />
    <div class="table">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Sku</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                </tr>
            </thead>
            <tbody>
                @*                @foreach (var t in Model)
                    {
                        <tr>
                            <th scope="row">@t.Id</th>
