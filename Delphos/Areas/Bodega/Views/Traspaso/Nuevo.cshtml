@model Delphos.Models.Traspaso

    <div style="align-content:center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="caja">
                <h1>Traspaso</h1>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*        <div class="form-group">
                    @Html.LabelFor(model => model.SkuProducto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SkuProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SkuProducto, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <div class="form-group row">
                    <label for="SkuProducto" class="col-sm-2 col-form-label">Sku</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="SkuProducto">
                            @foreach (Delphos.Models.Producto p in ViewBag.productos)
                            {
                                <option value="@p.Sku">@p.Sku / @p.Nombre</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="Cantidad" class="col-sm-2 col-form-label">Cantidad</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="Cantidad" name="Cantidad" value="@Model.Cantidad" required>
                        @Html.ValidationMessageFor(Model => Model.Cantidad, null, new { @class = "error" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="SkuProducto" class="col-sm-2 col-form-label">Bodega Origen</label>
                    <div class="col-sm-4">
                        <select class="form-control" name="BodegaOrigen">
                            @foreach (Delphos.Models.BodegaTipo p in ViewBag.tipobodega)
                            {
                                <option value="@p.Id">@p.Nombre</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col" style="text-align:right">
                        <a class="btn btn-sm colorBoton col-sm-2" href="@Url.Action("Index", "Traspaso")"><i class="fas fa-arrow-left" style="padding-right:10px"></i>Volver</a>
                        <button type="submit" class="btn btn-sm colorBoton col-sm-2"><i class="far fa-save" style="padding-right:10px"></i>Confirmar</button>
                    </div>
                </div>
                @*
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>*@

            </div>
        }
    </div>
