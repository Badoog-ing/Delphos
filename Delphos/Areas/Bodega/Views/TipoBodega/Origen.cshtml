@model IEnumerable<Delphos.Models.TablaBodega>

<h1>Listar Productos</h1>
<hr />

<div class="row">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fab fa-searchengin"></i></span>
                </div>
                <input type="search" class="form-control col-sm-6" placeholder="Buscar..." aria-label="Username" aria-describedby="basic-addon1" name="Search" Id="Search">
                <label style="padding-left:10px; padding-top:4px" for="Search">Busqueda rapida</label>
            </div>
        </div>

    </div>
    <div class="col" style="text-align:right">
        <a class="btn colorBoton col-sm-3" href="@Url.Action("Origen", "TipoBodega")"><i class="fas fa-box-open" style="padding-right:10px"></i>Principal</a>
        <a class="btn colorBoton col-sm-3" href="@Url.Action("Destino", "TipoBodega")"><i class="fas fa-box-open" style="padding-right:10px"></i>Secundaria</a>
    </div>

</div>

<br />
<div class="table">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sku</th>
                <th scope="col">Nombre Producto</th>
                <th scope="col">Stock</th>
                <th scope="col">Precio Unitario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr class="Search">
                    <th scope="row"></th>
                    <td>@p.Producto.Sku</td>
                    <td>@p.Producto.Nombre</td>
                    <td>@p.Stock</td>
                    <td>@p.Producto.Precio</td>
                </tr>
            }

        </tbody>
    </table>
</div>




