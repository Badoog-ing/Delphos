@model Delphos.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutU.cshtml";
}

<h1 style="text-align:center">Ver Usuario</h1>
<hr />

@*@Html.ValidationSummary()*@

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form method="post" action="@Url.Action("Ver", "Usuario")">
            <div class="form-group row">
                <label for="Rut" class="col-sm-2 col-form-label">Rut</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Rut" name="Rut" value="@Model.Rut" disabled>
                    @Html.ValidationMessageFor(model => model.Rut)
                </div>
            </div>

            <div class="form-group row">
                <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nombre" name="Nombre" value="@Model.Nombre" disabled>
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>
            </div>

            <div class="form-group row">
                <label for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Password" name="Password" value="@Model.Password" disabled>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group row">
                <label for="Cargo" class="col-sm-2 col-form-label">Cargo</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Cargo" name="Cargo" value="@Model.CargoId" disabled>
                    @Html.ValidationMessageFor(model => model.Cargo)
                </div>
            </div>

            <div class="form-group row">
                <label for="Estado" class="col-sm-2 col-form-label">Estado</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Estado" name="Estado" value="@Model.Estado" disabled>
                    @Html.ValidationMessageFor(model => model.Estado)
                </div>
            </div>
            <br /><br />
            <div class="form-group row">
                <div class="col">
                    <a class="btn colorBoton" href="@Url.Action("Index", "Usuario")">Volver</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>

