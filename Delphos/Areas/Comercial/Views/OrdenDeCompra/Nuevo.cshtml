
<h1>Crear Orden de Compra</h1>
<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form method="post" action="@Url.Action("Nuevo", "OrdenDeCompra")">

            <div class="form-group row">
                <label for="Id" class="col-sm-2 col-form-label">N°OrdenDeCompra</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Id" name="Id">
                </div>
            </div>

            <div class="form-group row">
                <label for="Proveedor" class="col-sm-2 col-form-label">Proveedor</label>
                <div class="col-sm-10">
                    <select class="form-control" id="Proveedor" name="Proveedor">
                        <option>Comercial Ruver LTDA</option>
                        <option>Aristia</option>
                        <option>Super Pollo</option>
                        <option>Comercial Yolanda</option>
                    </select>

                </div>
            </div>

            <br />

            <div>
                <a class="btn colorBoton col-sm-4" href="@Url.Action("AgregarProducto", "OrdenDeCompra")">Agregar Productos</a> <!--Falta Grilla-->
            </div>


            <br /><br />

            <div class="row">
                <div class="col" style="text-align:right">
                    <a class="btn btn-sm colorBoton col-sm-3" href="@Url.Action("Index", "OrdenDeCompra")"><i class="fas fa-arrow-left" style="padding-right:10px"></i>Volver</a>
                    <button type="submit" class="btn btn-sm colorBoton col-sm-3"><i class="far fa-save" style="padding-right:10px"></i>Confirmar</button>
                </div>
            </div>

        </form>
    </div>
    <div class="col-3"></div>
</div>