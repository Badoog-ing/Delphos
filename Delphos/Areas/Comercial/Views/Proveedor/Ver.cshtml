@model Delphos.Models.Proveedor
<h1>Ver Proveedor</h1>
<hr />

<div class="caja">
    <div class="row">
        <div class="col"></div>
        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <img src="~/Otros/proveedor.jpg" class="card-img" alt="...">
                </div>
                <div class="col-md-5">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Nombre</h5>
                        <ul style="padding-top:10px">
                            <li type="disc"><p class="card-text">Rut: @Model.Rut</p></li>
                            <li type="disc"><p class="card-text">Giro: @Model.Giro</p></li>
                            <li type="disc"><p class="card-text">RazonSocial: @Model.RazonSocial</p></li>
                            <li type="disc"><p class="card-text">Correo: @Model.Email</p></li>
                            <li type="disc"><p class="card-text">Telefono: @Model.Telefono</p></li>
                            <!--<li type="disc"><p class="card-text">Usuario Creador: @Model.UsuarioId_FK</p></li>-->
                            <!--Traigo desde el ProveedorCOntroller Ver, la lista de usuarios y comparo id del usuario con el id del usuario guardado  en formulario(el que me trajo en el formulario)-->
                            <li type="disc">
                                @foreach (Delphos.Models.Usuario u in ViewBag.usuarios)
                                {<!--u.id = id de usuario guardado en usuarios bd, UsuarioId= el usuario que esta guardado en proveedor kf-->
                                    if (u.Id == Model.UsuarioId_FK)
                                    {
                                        <p class="card-text">Usuario Creador: @u.Nombre @u.ApellidoP</p>
                                    }
                                }
                            </li>
                        </ul>
@*                        <p class="card-text" style="text-align:right; padding-top:30px"><small class="text-muted">Fecha de registro: @Model.FechasCreacion.ToString("dd-MM-yyyy")</small></p>
*@                    </div>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>

<br /><br />

<div class="row">
    <div class="col" style="text-align:right">
        <a class="btn btn-sm colorBoton col-sm-2" href="@Url.Action("Index", "Proveedor")"><i class="fas fa-arrow-left" style="padding-right:10px"></i>Volver</a>
    </div>
</div>