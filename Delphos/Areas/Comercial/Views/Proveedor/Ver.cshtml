@model Delphos.Models.Proveedor
<h1>Ver Proveedor</h1>
<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form>
            <div class="form-group row">
                <label for="Rut" class="col-sm-2 col-form-label">Rut</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Rut" name="Rut" value="@Model.Rut" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label for="Giro" class="col-sm-2 col-form-label">Giro</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Giro" name="Giro" value="@Model.Giro" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label for="RazonSocial" class="col-sm-2 col-form-label">Razon Social</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="RazonSocial" name="RazonSocial" value="@Model.RazonSocial" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="Telefono" class="col-sm-2 col-form-label">Telefono</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" disabled>
                </div>
            </div>
            <br /><br />
            <div class="row">
                <div class="col">
                    <a class="btn colorBoton" href="@Url.Action("Index", "Proveedor")">Volver</a>
                </div>
            </div>

        </form>
    </div>
    <div class="col-3"></div>
</div>