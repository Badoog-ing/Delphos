
@{
    Layout = "~/Views/Shared/_LayoutComercial.cshtml";
}
<h1>Crear Orden de Compra</h1>
<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form method="post" action="@Url.Action("Nuevo", "OrdenDeCompra")">

            <div class="form-group row">
                <label for="IdOrdenCompra" class="col-sm-2 col-form-label">N°OrdenDeCompra</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="IdOrdenCompra" name="IdOrdenCompra" >
                </div>
            </div>

            <div class="form-group row">
                <label for="Proveedor" class="col-sm-2 col-form-label">Proveedor</label>
                <div class="col-sm-10">
                    <select class="form-control" id="Proveedor" name="Proveedor">
                        <option>Comercial Ruver LTDA</option>
                        <option>Aristia</option>
                        <option>Super Pollo</option>
                        <option>Comercial Yolanda</option>
                    </select>

                </div>
            </div>

            <div class="form-group row">
                <label for="Telefono" class="col-sm-2 col-form-label">Telefono</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Telefono" name="Telefono" >
                </div>
            </div>

            <div class="form-group row">
                <label for="Direccion" class="col-sm-2 col-form-label">Direccion</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Direccion" name="Direccion" >
                </div>
            </div>

            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Email" name="Email" >
                </div>
            </div>
            <div class="form-group row">
                <label for="Telefono" class="col-sm-2 col-form-label">Telefono</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Telefono" name="Telefono" >
                </div>
            </div>
            <br /><br />
            <a class="btn colorBoton" href="@Url.Action("AgregarProducto", "OrdenDeCompra")">Agregar Productos</a> <!--Falta Grilla-->
            <br /><br />
            <div class="row">
                <div class="col">
                    <a class="btn colorBoton" href="@Url.Action("Index", "OrdenDeCompra")">Volver</a>
                </div>

                <div class="col" style="text-align:right">
                    <button type="submit" class="btn colorBoton">Confirmar</button>
                </div>
            </div>

        </form>
    </div>
    <div class="col-3"></div>
